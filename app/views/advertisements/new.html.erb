<h1>NEW AD<h1>

<div class="row">
    <%= form_for @advertisement do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter post title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, row: 8, class: 'form-control', placeholder: "Enter post body" %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.number_field :price, class: "form-control", placeholder: 199 %>
      </div>
      <div class="form-control">
        <%= f.submit "Save", class: 'btn btn-success' %>
      <div>
    <% end %>
</div>
